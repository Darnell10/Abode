<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/landlord_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardUseCompatPadding="true"
    card_view:layout_constraintRight_toRightOf="parent">

    <RelativeLayout
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tixView"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Ticket #" />

        <TextView
            android:id="@+id/user_priority"
            android:maxLines="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/tixView"
            android:gravity="center" />

        <Button
            android:id="@+id/status"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true" />

        <TextView
            android:id="@+id/tenant_issue"
            android:layout_width="329dp"
            android:layout_height="50dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tixView"
            android:gravity="center|start"
            android:hint="Tenant's Subject title"
            android:maxLines="1"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tenants_name"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentStart="true"
            android:layout_below="@id/tenant_issue"
            android:textSize="20sp"
            android:hint="Tenant's name"/>

        <TextView
            android:id="@+id/tenant_apt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tenants_name"
            android:textSize="20sp"
            android:hint="Apt #"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignBottom="@+id/date"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/tenant_apt"
            android:gravity="center"
            android:text="@string/date_requested" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@+id/tenant_apt"
            android:layout_toEndOf="@+id/textView5"
            android:gravity="center"
            android:layout_marginStart="10dp"/>

        <TextView
            android:id="@+id/priority_level_view"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_below="@id/tenant_apt"
            android:layout_toEndOf="@id/date"
            android:layout_marginStart="10dp"
            android:gravity="center"
            android:text="@string/priority_level" />

        <TextView
            android:id="@+id/ticket_num"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_below="@id/tenant_issue"
            android:layout_toEndOf="@+id/priority_level_view"
            android:layout_marginStart="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>