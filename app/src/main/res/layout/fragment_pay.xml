<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frag_pay"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/payment_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/cardview_default_radius"
        android:padding="@dimen/cardview_default_radius"
        app:cardElevation="5dp"
        app:cardMaxElevation="2dp"
        app:cardUseCompatPadding="true">

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:orientation="vertical"
        android:padding="4dp">

        <TextView
            android:id="@+id/amount_paid"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Thank You"
            android:textAlignment="center"
            android:textStyle="bold|italic"
            android:textColor="@color/colorPrimaryYellow"
            android:textSize="30sp" />


        <ImageView

            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="center"
            android:layout_marginTop="8dp"
            android:background="@drawable/success"
            android:foregroundGravity="center" />


        <TextView
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Payment Received"
            android:textSize="20sp" />

        <!--&lt;!&ndash;<ImageView&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_width="64dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:layout_height="64dp"&ndash;&gt;-->
        <!--&lt;!&ndash;android:background="@drawable/success"/>&ndash;&gt;-->

        <TextView
            android:textStyle="italic"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="4dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Confirmation Code:"
            android:textSize="25sp" />

        <TextView
            android:textStyle="italic"
            android:id="@+id/confirmation"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:hint="@string/confirmation"
            android:textAlignment="center"
            android:textSize="20sp" />

        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="0dp"-->
        <!--android:layout_marginBottom="2sp"-->
        <!--android:layout_weight="1"-->
        <!--android:gravity="center"-->
        <!--android:textAlignment="center"-->
        <!--android:textSize="40sp" />-->

    </LinearLayout>

</FrameLayout>

