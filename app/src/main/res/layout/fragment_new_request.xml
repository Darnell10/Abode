<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:background="@color/light_gray">

        <EditText
            android:id="@+id/subject_title_view"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:elevation="2dp"
            android:hint="@string/subject_title"
            android:maxLines="1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/priority_view"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:gravity="center"
            android:text="@string/priority_level"
            app:layout_constraintEnd_toEndOf="@+id/subject_title_view"
            app:layout_constraintStart_toStartOf="@+id/subject_title_view"
            app:layout_constraintTop_toBottomOf="@+id/subject_title_view" />


        <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/radio_priority"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/priority_view">

            <RadioButton
            android:id="@+id/radio_urgent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"

            android:text="@string/urgent" />

            <RadioButton
            android:id="@+id/radio_moderate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/moderate" />

        </RadioGroup>


        <TextView
            android:id="@+id/repair_location_view"
            android:layout_width="116dp"
            android:layout_height="40dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Location: "
            android:textAlignment="center"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/radio_priority" />

        <Spinner
            android:id="@+id/location_spinner"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="68dp"
            android:layout_marginTop="8dp"
            android:layout_weight="2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.382"
            app:layout_constraintStart_toEndOf="@+id/repair_location_view"
            app:layout_constraintTop_toBottomOf="@+id/radio_priority" />

        <TextView
            android:id="@+id/repair_description_view"
            android:layout_width="match_parent"
            android:layout_height="21dp"
            android:layout_margin="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="8dp"
            android:text="Description"
            app:layout_constraintEnd_toEndOf="@+id/priority_view"
            app:layout_constraintTop_toBottomOf="@+id/repair_location_view" />


        <EditText
            android:id="@+id/user_description_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/transparent"
            android:ems="10"
            android:gravity="top|start"
            android:hint="What seems to be the problem?"
            android:inputType="textMultiLine"
            android:lines="6"
            android:maxLength="140"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/repair_description_view" />


        <android.support.v7.widget.RecyclerView
            android:id="@+id/image_request_rv"
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/user_description_view"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toEndOf="@+id/add_photo_button"
            app:layout_constraintTop_toBottomOf="@+id/user_description_view">

        </android.support.v7.widget.RecyclerView>

        <Button
            android:id="@+id/submit_request_button"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="108dp"
            android:text="Submit"
            app:layout_constraintEnd_toEndOf="@+id/image_request_rv"
            app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintStart_toStartOf="@+id/add_photo_button"
            app:layout_constraintTop_toBottomOf="@+id/user_description_view" />

        <ImageView
            android:id="@+id/add_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/user_description_view"
            app:layout_constraintTop_toBottomOf="@+id/user_description_view"
            app:srcCompat="@drawable/ic_photo_camera_black_24dp" />
    </android.support.constraint.ConstraintLayout>

