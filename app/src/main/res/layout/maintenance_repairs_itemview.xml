<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardview_default_radius"
    card_view:cardElevation="10dp"
    card_view:cardUseCompatPadding="true"
    card_view:layout_constraintRight_toRightOf="parent">

    <LinearLayout
        android:id="@+id/note_item_wrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?android:selectableItemBackground"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/note_item_title"
            android:layout_width="match_parent"
            android:textSize="20sp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="1"
            android:textStyle="bold"
            tools:text="Hello word title" />

        <TextView
            android:id="@+id/note_item_body"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginBottom="5dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:maxLines="3"
            android:textSize="20sp"
            tools:text="Here is the description text which may be unusually long  and contain a lot of spacess and even new lines" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F0F0">

            <TextView
                android:id="@+id/date_scheduled"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="15sp"
                android:text="Scheduled on"/>

            <TextView
                android:id="@+id/priority"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="15sp"
                android:text="@string/priority"/>

            <TextView
                android:id="@+id/status_display"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="15sp"
                android:text="@string/status"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#F0F0F0">

            <TextView
                android:id="@+id/date"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="Date"/>

            <TextView
                android:id="@+id/user_priority"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="20sp"
                android:textColor="#000000"
                android:hint="Priority level"/>

            <TextView
                android:id="@+id/status"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight="1"
                android:paddingStart="15dp"
                android:paddingEnd="0dp"
                android:textSize="20sp"
                android:hint="Status"/>

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>